client.urgent           #b4be82 #b4be82 #161821 #268BD2
client.placeholder      #000000 #0c0c0c #c6c8d1 #000000

client.background       #161821

# scripts
bindsym --to-code $mod+n      exec bash $HOME/scripts/vpn_dmenu
bindsym           XF86Launch1 exec bash $HOME/scripts/exit_dmenu

include $HOME/.config/sway/input
include $HOME/.config/sway/gaps

# apply wallpaper
output LVDS-1 bg $HOME/.wallpaper/Aenami/1628134847230.jpg fill
# screenshot tool
bindsym --to-code $mod+Shift+S exec grimshot --notify copy area
# clipboard manager
exec wl-paste -t text --watch clipman store
bindsym $mod+v exec clipman pick -t rofi
# bluetooth manager
bindsym --to-code $mod+b exec blueberry

