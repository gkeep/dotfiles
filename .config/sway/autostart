# load system variables
exec_always systemctl --user import-environment DISPLAY WAYLAND_DISPLAY; systemctl --user start graphical-session.target

# automatically lock and suspend
exec swayidle -w \
    timeout 600 'swaylock -f' \
    timeout 900 'systemctl suspend' \
    before-sleep 'swaylock -f'

# fix gtk's shit on wayland
set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'Arc'
    gsettings set $gnome-schema icon-theme 'Papirus'
    gsettings set $gnome-schema font-name 'Noto Sans 10'
}

# vim: ft=i3config
