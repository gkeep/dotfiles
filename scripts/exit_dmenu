#!/bin/bash
# Dmenu shutdown/lock/suspend/reboot menu.
menu='rofi -dmenu --no-show-icons'
output=$(printf "lock\nsuspend\nshutdown\nreboot\nlogout" | $menu -p "ACTION")

case "$output" in
    logout)
        bspc quit
    ;;
    shutdown)
        shutdown -h now
    ;;
    suspend)
        systemctl suspend
    ;;
    lock)
        slock
    ;;
    reboot)
        reboot
    ;;
esac
