#!/usr/bin/bash
# script to update specified dotfiles to your repo's location

export REPO_LOCATION="$HOME/git/dotfiles" # your dotfiles repo location here

# to add a file/folder specify its locaion using $HOME or $XDG_CONFIG_HOME here
declare -a FILES=(
    $HOME/.config/alacritty \
    $HOME/.config/dunst \
    $HOME/.config/sway \
    $HOME/.config/swaylock \
    $HOME/.config/i3status-rust \
    $HOME/.config/nvim \
    $HOME/.config/zsh \
    $HOME/.aliases \
    $HOME/.profile \
    $HOME/.vimrc \
    $HOME/.zshrc \
    $HOME/.tmux.conf \
    $HOME/.gitconfig \
    $HOME/scripts \
)

declare -a IGNORE=(
    $HOME/.config/ncmpcpp/error.log \
    $HOME/.config/zsh/plugins \
    $HOME/.config/zsh/keybindings.zsh.zwc \
)

for i in "${FILES[@]}"
do
    if [[ $i == *".config"* ]]
    then
        for b in "${IGNORE[@]}"
        do
            if [[ ! $i =~ $b ]]
            then
                rsync -rl $i $REPO_LOCATION/.config
            fi
        done
        echo "Successfully updated $i"
    else
        rsync -rl $i $REPO_LOCATION
    fi
done
