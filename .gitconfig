[include]
    path = ~/.git-credentials
[core]
    editor="nvim"
[init]
    defaultBranch = main
[alias]
    st  = status
    ci  = commit --verbose
    co  = checkout
    df  = diff
    lg  = log -p
    ap  = add --patch
    dfh = diff HEAD
[credential]
	helper = /usr/lib/git-core/git-credential-libsecret
[pull]
    rebase = true
[commit]
	gpgsign = true
